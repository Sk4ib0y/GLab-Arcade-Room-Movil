<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".Altas.ConsolaPrecioAltas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/atras"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/atras" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="80dp"
                android:shadowColor="#00FFFF"
                android:shadowRadius="10"
                android:text="Alta de\nConsola"
                android:textColor="#00FFFF"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:background="@drawable/recuadros"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consola"
            android:layout_marginTop="25dp"
            android:layout_marginStart="20dp"
            android:textColor="#00FFFF"
            android:id="@+id/textoconsola"
            android:gravity="center_vertical"
            android:shadowRadius="10"
            android:textSize="30dp"
            android:textStyle="bold"
            android:shadowColor="#00FFFF"/>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="25dp"
                android:id="@+id/listita"/>
            <TextView
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text="Precio"
                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp"
                android:textColor="#00FFFF"
                android:gravity="center_vertical"
                android:shadowRadius="10"
                android:textSize="30dp"
                android:textStyle="bold"
                android:shadowColor="#00FFFF"/>
            <EditText
                android:layout_marginTop="20dp"
                android:layout_width="260dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="16sp"
                android:id="@+id/precio"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Cantidad de Jugadores"
                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp"
                android:textColor="#00FFFF"
                android:gravity="center_vertical"
                android:shadowRadius="10"
                android:textSize="30dp"
                android:textStyle="bold"
                android:shadowColor="#00FFFF"/>
            <EditText
                android:layout_marginTop="20dp"
                android:layout_width="260dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="16sp"
                android:id="@+id/njugadores"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/botones"
                android:text="Añadir Precio"
                android:textSize="28dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                app:backgroundTint="@null"
                android:textColor="#FFFFFF"
                android:id="@+id/añadir"/>
        </LinearLayout>
        <TextView
            android:layout_width="200dp"
            android:layout_height="130dp"/>
    </LinearLayout>

</ScrollView>